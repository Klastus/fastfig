##---- Should be DIRECTLY executable !! ----
##-- ==>  Define data, use random,
##--	or do  help(data=index)  for the standard data sets.

## The function is currently defined as
function (input.path, output.path, montage.name = "Montage.jpg") 
{
    push.dir <- function(folder.name) {
        if (!dir.exists(folder.name)) {
            dir.create(folder.name, recursive = TRUE)
        }
    }
    push.dir(output.path)
    montage.dirs <- dirname(list.files(input.path, pattern = montage.name, 
        recursive = TRUE))
    for (montage.dir in montage.dirs) {
        file.copy(from = paste(input.path, montage.dir, montage.name, 
            sep = "/"), to = paste(output.path, "/", montage.dir, 
            ".jpg", sep = ""), overwrite = TRUE)
    }
  }
}
